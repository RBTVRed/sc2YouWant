\par \pard\plain \s22\rtlch\af8\afs24\alang1081 \ltrch\lang1031\langfe2052\hich\af3\loch\ql\nowidctlpar\hyphpar0\fi0\li567\lin567\ri567\rin567\sb0\sa283\ltrpar\cf0\f3\fs24\lang1031\kerning1\dbch\af6\langfe2052{
